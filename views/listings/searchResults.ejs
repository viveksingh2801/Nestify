<% layout("/layouts/boilerplate") %>
<body>
  <div class="container py-5">
    <h2 class="card-text mb-4">Search Results for "<%= query %>"</h2>
    <div class="row g-4">
      <% if (searchResults.length > 0) { %> <% searchResults.forEach(listing =>
      { %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none">
          <div class="card search-card ">
            <img
              src="<%= listing.image.url %>"
              class="card-img-top"
              alt="listing_image"
              style="height: 220px; object-fit: cover"
            />
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b> <br />
                &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
              </p>
            </div>
          </div>
        </a>
      </div>
      <% }) %> <% } else { %>
      <div class="col-12">
        <p class="text-muted">No listings found matching your query.</p>
      </div>
      <% } %>
    </div>
  </div>
</body>
